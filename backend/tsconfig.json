{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "dist",
  },
  "include": [
    "server.ts",
    "src/**/*.ts",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}